<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SignupController">
    <TextField fx:id="txtUsername" layoutX="50" layoutY="100" promptText="Username"/>
    <PasswordField fx:id="txtPassword" layoutX="50" layoutY="140" promptText="Password"/>
    <Button text="Sign Up" layoutX="50" layoutY="180" onAction="#handleSignup"/>
</AnchorPane>
